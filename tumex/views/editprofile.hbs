<form class="modal-edit" method="post" action="/users/editprofile">
  <div class="container">
    <p>Editar tus campos los campos indicados</p>
    <hr>

    <label for="edad"><b>Edad</b></label>
    <input type="text" value="{{user.edad}}" name="edad">

    <label for="club"><b>Club</b></label>
    <input type="text" value="{{user.club}}" name="club">

    <br><br>
    <label for="altura"><b>Altura</b></label>
    <input type="number" name="altura"
     min="1.40" max="2.10" step=".01" value="{{user.altura}}"><span>m</span>

    <br><br>
    <label for="genero"><b>Soy</b></label>
    <select name="genero">
      <option value="hombre" {{#ifEquals user.genero "hombre"}} selected {{/ifEquals}}>Hombre</option>
      <option value="mujer" {{#ifEquals user.genero "mujer"}} selected {{/ifEquals}}>Mujer</option>
    </select>

    <br><br>
    <label for="mano"><b>Soy</b></label>
    <select name="mano">
      <option value="diestro" {{#ifEquals user.mano "diestro"}} selected {{/ifEquals}}>Diestro</option>
      <option value="zurdo" {{#ifEquals user.mano "zurdo"}} selected {{/ifEquals}}>Zurdo</option>
      <option value="ninguno" {{#ifEquals user.mano "ninguno"}} selected {{/ifEquals}}>Prefiero no decir</option>
    </select>

    <br><br>
    <label for="reves"><b>Mi reves es:</b></label>
    <select name="reves">
      <option value="una" {{#ifEquals user.reves "una"}} selected {{/ifEquals}}>A una mano</option>
      <option value="dos" {{#ifEquals user.reves "dos"}} selected {{/ifEquals}}>A dos manos</option>
      <option value="niguna" {{#ifEquals user.reves "ninguna"}} selected {{/ifEquals}}>Prefiero no decir</option>
    </select>

    <br><br>
    <label for="raquetas"><b>Marca de raquetas</b></label>
    <input type="text" value="{{user.raquetas}}" name="raquetas">

    <br><br>
    <label for="superficie"><b>Superficie preferida para jugar</b></label>
    <select name="superficie">
      <option value="arcilla" {{#ifEquals user.superficie "arcilla"}} selected {{/ifEquals}}>Arcilla</option>
      <option value="dura" {{#ifEquals user.superficie "dura"}} selected {{/ifEquals}}>Dura</option>
      <option value="pasto" {{#ifEquals user.superficie "pasto"}} selected {{/ifEquals}}>Pasto</option>
    </select>

    <br><br>
    <label for="acercademi"><b>Acerca de mi</b></label>
    <textarea name="acercademi" rows="10" cols="30">{{user.acercademi}}</textarea>

    <div class="clearfix">
      <button type="submit" name="submit" class="signupbtn">Salvar</button>
    </div>
  </div>
</form>
